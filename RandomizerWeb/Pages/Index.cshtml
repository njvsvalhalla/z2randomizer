                        <br />
                        @Html.CheckBoxFor(m => m.SettingsModel.StartWithThunder, new { @class = "startingSpell flag21 usedForFlags" })
                        @Html.LabelFor(m => m.SettingsModel.StartWithThunder, "Start With Thunder")
