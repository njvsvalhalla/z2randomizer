                        @Html.LabelFor(m => m.SettingsModel.ChangePalacePalettes, "Change Palace Pallates")
                        <br />
                        @Html.LabelFor(m => m.SettingsModel.NumberOfPalacesToComplete, "Number Of Palaces To Complete")
