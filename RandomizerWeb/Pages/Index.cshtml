                        @Html.LabelFor(m => m.SettingsModel.AllowUnsafePathEncounters, "Allow Unsafe Path Encounters")
                        <br />
                        @Html.LabelFor(m => m.SettingsModel.HiddenPalace, "Hidden Palace")
